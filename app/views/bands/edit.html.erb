<h1>Edit your Band</h1>

<%= form_with(model: @band) do |form| %>
  <div class="mb-3">
    <%= form.label :title, "Band Title" %><br>
    <%= form.text_field :title %>
  </div>

  <div class="mb-3">
    <%= form.label :address, "Address" %><br>
    <%= form.text_field :address %>
  </div>
  <div class="mb-3">
    <%= form.label :genre, "Genre", class: 'form-label' %>
    <%= form.select :genre, options_for_select([
          ['Acapella', 'acapella'], ['Alternative', 'alternative'], ['Blues', 'blues'],
          ['Classical', 'classical'], ['Country', 'country'], ['Dance', 'dance'],
          ['Disco', 'disco'], ['Electronic', 'electronic'], ['Folk', 'folk'],
          ['Gospel', 'gospel'], ['Hip Hop', 'hip-hop'], ['Indie', 'indie'],
          ['Jazz', 'jazz'], ['Latin', 'latin'], ['Metal', 'metal'],
          ['Pop', 'pop'], ['Punk', 'punk'], ['Rap', 'rap'],
          ['Reggae', 'reggae'], ['Rock', 'rock'], ['R&B', 'r&b'],
          ['Soul', 'soul'], ['Techno', 'techno'], ['Trance', 'trance'],
          ['World', 'world'], ['Swing', 'swing'], ['Hard Rock', 'hard rock'],
          ['Progressive Rock', 'progressive rock'], ['New Age', 'new age'],
          ['House', 'house'], ['Grunge', 'grunge'], ['Ska', 'ska'],
          ['Emo', 'emo'], ['Industrial', 'industrial'], ['Soundtrack', 'soundtrack'],
          ['Dubstep', 'dubstep'], ['Lo-fi', 'lo-fi'], ['Vocal', 'vocal']
        ]), { prompt: "Select a Genre" }, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :photo, "Photo", class: "col-form-label-lg" %>
    <%= form.file_field :photo, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :description, "Description" %><br>
    <%= form.text_area :description %>
  </div>

  <div class="mb-3">
    <%= form.submit "Save Changes" %>
  </div>
<% end %>

<p>
  <%= link_to 'Back to Bands List', bands_path %>
<p>
