<div class="container">
  <!-- Banner Section -->
  <div class="band-show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= asset_path('band-banner.jpg') %>); height: 300px; width: 100%; border-radius: 5px; margin-bottom: 20px;"></div>

  <!-- Main Content Container with Flexbox for two columns -->
  <div class="main-content" style="display: flex; gap: 40px; flex-direction: column; padding: 20px;">

    <div style="display: flex; gap: 40px; width: 100%;">
      <!-- Left Column: Band Image and Details -->
      <div class="left-section" style="flex: 65%;">
        <!-- Band Profile Image -->
        <div class="band-show-profile-image-container" style="width: 250px; margin-bottom: 20px;">
          <% if @band.photo.attached? %>
            <%= image_tag @band.photo, alt: "#{@band.title}", class: "band-show-profile-image" %>
          <% else %>
            <%= image_tag "default-band-image.jpg", alt: "default band image", class: "band-show-profile-image" %>
          <% end %>
        </div>

        <!-- Band Details Card -->
        <div class="band-show-details-card">
          <div class="band-show-details-header">
            <h2>Band Details</h2>
            <% if current_user == @band.leader %>
              <%= link_to edit_band_path(@band), class: "ms-auto" do %>
                <i class="fa-solid fa-pencil band-show-icon"></i>
              <% end %>
            <% end %>
          </div>
          <div class="band-show-detail-item">
            <i class="fa-solid fa-location-dot band-show-icon"></i> <%= @band.address %>
          </div>
          <div class="band-show-detail-item">
            <i class="fa-solid fa-music band-show-icon"></i> <%= @band.genre %>
          </div>
          <div class="band-show-detail-item">
            <i class="fa-solid fa-circle-info band-show-icon"></i> <%= @band.description %>
          </div>
          <div class="band-show-detail-item border-top pt-2">
            <i class="fa-solid fa-drum band-show-icon"></i>
            We are looking for: <%= @band.searching_for_instruments.join(", ") %>
          </div>
        </div>
      </div>

      <!-- Right Column: Members Card -->
      <div class="band-show-members-card" style="flex: 35%;">
        <h2 class="band-show-members-h2">Members</h2>
        <% @members.each do |member| %>
          <div class="band-show-member-item">
            <%= link_to user_path(member), class: "band-show-member-link" do %>
              <%= member.first_name %> <%= member.last_name %>:
              ( <%= member.instruments.join(", ") %> )
            <% end %>
            <% if member == @band.leader %>
              <span class="band-leader-badge">(Band Leader)</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Button Section: Positioned Below Members Card and Right-Aligned -->
    <div class="button-section">
      <% if current_user != @band.leader %>
        <%= button_to 'Message Band Leader', chats_path(chat: { band_leader_id: @band.leader.id }), method: :post, class: "btn btn-primary" %>
      <% end %>

      <% if !@band.members.include?(current_user) && !current_user.band_id %>
        <% if current_user.join_requests.where(band_id: @band.id).length > 0 %>
          <p>Request already sent</p>
        <% else %>
          <%= button_to "Request to join #{@band.title}", band_join_requests_path(band_id: @band.id, join_request: { join_type: "user_to_band" }), method: :post, class: "btn btn-primary" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
