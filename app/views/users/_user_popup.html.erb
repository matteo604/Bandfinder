<div class="popup-container">
    <h1 style="color: black"><%= user.first_name %> <%= user.last_name %></h1>
    <% if user.photo.attached? %>
      <%= image_tag user.photo, class: "popup-image" %>
    <% else %>
      <%= image_tag "default-profile-image.jpg", alt: "Default Image", class: "popup-image" %>
    <% end %>
  </div>
