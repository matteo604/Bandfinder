<div class="popup-container">
    <h1 style="color: black; text-decoration: none;"><%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %></h1>
    <% if user.photo.attached? %>
      <%= image_tag user.photo, class: "popup-image" %>
    <% else %>
      <%= image_tag "default-profile-image.jpg", alt: "Default Image", class: "popup-image" %>
    <% end %>
  </div>
