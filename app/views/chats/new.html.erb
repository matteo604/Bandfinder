<div class="chats-container">
  <h1 class="chats-title">Start a New Chat</h1>

  <div class="chat-form-container">
    <%= form_with(model: @chat, url: chats_path, local: true, class: "chat-form") do |form| %>
      <div class="form-group">
        <%= form.label :user_id, "User" %>
        <%= form.collection_select :user_id, User.all, :id, :first_name, prompt: "Select a user", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :band_leader_id, "Band Leader" %>
        <%= form.collection_select :band_leader_id, Band.all, :leader_id, :title, prompt: "Select a band leader", class: "form-control" %>
      </div>

      <!-- Updated button styling -->
      <div class="form-submit">
        <%= form.submit "Create Chat", class: "chat-submit-button" %>
      </div>
    <% end %>
  </div>
</div>
