<div class="chats-container">
  <h1 class="chats-title">All Chats</h1>

  <% if @chats.any? %>
    <% @chats.each do |chat| %>
      <div class="chat-card">
        <p><strong>User ID:</strong> <%= chat.user_id %></p>
        <p><strong>Band Leader ID:</strong> <%= chat.band_leader_id %></p>
        <%= link_to 'View Chat', chat_path(chat), class: "chat-link" %>
      </div>
    <% end %>
  <% else %>
    <p class="no-chats">No chats available.</p>
  <% end %>
</div>
